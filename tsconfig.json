{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",        // Node 向け ESM
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],        // ★ src だけ明示
  "exclude": ["client.ts"]           // ★ 念のため個別除外
}
